{
  "name": "monopacker",
  "version": "2.0.0-rc.0",
  "description": "A tool for managing builds of monorepo frontend projects with eg. lerna or similar tools.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "monopacker": "build/bin/monopacker-cli.js"
  },
  "scripts": {
    "clean": "npx rimraf node_modules build test/**/temp",
    "prebuild": "rimraf build",
    "build": "tsc -p tsconfig.json",
    "commit": "npx git-cz",
    "pretest": "rimraf ./test/**/*.gz ./test/**/.temp",
    "test": "jest --runInBand",
    "prerelease": "npm-run-all test build",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janbiasi/monopacker.git"
  },
  "keywords": [
    "monorepository",
    "monorepo",
    "lerna",
    "packer",
    "pack",
    "bundle",
    "deploy",
    "ci",
    "tool",
    "monopack",
    "monopacker",
    "nx",
    "lerna"
  ],
  "author": "Jan Biasi <biasijan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/janbiasi/monopacker/issues"
  },
  "homepage": "https://github.com/janbiasi/monopacker#readme",
  "dependencies": {
    "debug": "4.1.1",
    "execa": "2.0.3",
    "fs-extra": "8.1.0",
    "glob": "7.1.4",
    "matcher": "2.0.0",
    "ncp": "2.0.0",
    "ora": "3.4.0",
    "rimraf": "2.6.3"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "github:semantic-release/commit-analyzer",
    "@semantic-release/github": "5.4.2",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.2.1",
    "@types/debug": "4.1.4",
    "@types/ejs": "2.6.3",
    "@types/execa": "0.9.0",
    "@types/fs-extra": "8.0.0",
    "@types/jest": "24.0.15",
    "@types/matcher": "1.1.0",
    "@types/ncp": "2.0.1",
    "@types/rimraf": "2.0.2",
    "ejs": "2.6.2",
    "jest": "24.8.0",
    "jest-html-reporter": "2.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.18.2",
    "semantic-release": "15.13.19",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "typescript": "3.5.2"
  },
  "files": [
    "build",
    ".releaserc",
    "README.md",
    "LICENSE"
  ]
}
