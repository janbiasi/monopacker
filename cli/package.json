{
  "name": "monopacker",
  "version": "1.0.0",
  "description": "A tool for managing builds of monorepo frontend projects with eg. lerna or similar tools.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "bin/*",
    "dist/**"
  ],
  "bin": {
    "monopacker": "./bin/cli.js"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc -p tsconfig.build.json",
    "dev": "node -r ts-node/register -r tsconfig-paths/register \"./src/index.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/janbiasi/monopacker.git"
  },
  "keywords": [
    "monorepository",
    "monorepo",
    "lerna",
    "packer",
    "pack",
    "bundle",
    "deploy",
    "ci",
    "tool",
    "monopack",
    "monopacker",
    "nx",
    "lerna"
  ],
  "author": "Jan Biasi <biasijan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/janbiasi/monopacker/issues"
  },
  "homepage": "https://github.com/janbiasi/monopacker#readme",
  "dependencies": {
    "@monopacker/runtime": "*",
    "commander": "8.3.0",
    "chalk": "^4"
  },
  "optionalDependencies": {
    "@monopacker/visualizer": "*"
  },
  "devDependencies": {
    "@types/commander": "2.12.2",
    "@types/fs-extra": "9.0.13",
    "@types/node": "16.11.12",
    "fs-extra": "10.0.0",
    "typescript": "4.5.3",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.12.0"
  }
}
