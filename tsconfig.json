{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"types": ["node", "jest"],
		"paths": {
			"@monopacker/types": ["./packages/types/src"],
			"@monopacker/plugin": ["./packages/plugin/src"],
			"@monopacker/resolver": ["./packages/resolver/src"],
			"@monopacker/config": ["./packages/config/src"],
			"@monopacker/runtime": ["./packages/runtime/src"],
			"@monopacker/log": ["./packages/log/src"]
		}
	},
	"exclude": ["**/fixtures"]
}
